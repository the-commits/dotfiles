" Ctrl+Shift+% â†’ vsplit
nnoremap <C-%> :vsplit<CR>

" Ctrl+Shift+- â†’ split
nnoremap <C-_> :split<CR>

if executable('xclip')
  " Kopiera till clipboard
  nnoremap <Leader>y :w !xclip -selection clipboard<CR>

  " Klistra in frÃ¥n clipboard
  nnoremap <Leader>p :r !xclip -selection clipboard -o<CR>
endif


